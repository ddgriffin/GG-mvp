- provide(:title, 'Edit Profile')
%section#admin.section.alt-grey
  .container
    .row-fluid
      .span2.pull-left
        = render 'dashboards/nav'

      .span10.pull-right
        .fancyform-light.form-horizontal
          %h2 A little more about your interests
          /%h2 Profile
          = simple_form_for(@user, :url => update_avatar_path, defaults: { input_html: { class: 'span5' } }, html: { :method => :put } ) do |f|

            /= f.input :craft

            /= f.input :business

            /= f.input :learn-wants

            /= f.input :nominate

            /= f.input :photos


            = f.input :website

            /= f.input :webshop

            = f.input :bio, :as => :text, :input_html => {:rows => 8}

            = f.input :facebook

            = f.input :twitter

            = render 'avatar_fields', f: f
