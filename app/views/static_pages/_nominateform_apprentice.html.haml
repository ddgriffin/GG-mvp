/ app/views/static_pages/_nominateform-apprentice.html.haml
= simple_form_for nomination, html: {class: "form-horizontal"}, validate: true do |f|
  %fieldset
    / this is a hidden boolean field that submits saying this person has been nominated as an Apprentice
    = f.hidden_field :maker_type, value: "Apprentice"

    .control-group
      = f.label :maker_first_name, class: "control-label", label: "Nominee's First Name"
      .controls
        = f.text_field :maker_first_name, class: 'input-xlarge', rel: 'popover'

    .control-group
      = f.label :maker_last_name, class: "control-label", label: "Nominee's Last Name"
      .controls
        = f.text_field :maker_last_name, class: 'input-xlarge', rel: 'popover'

    .control-group
      = f.label :maker_email, class: "control-label", label: "Nominee's Email"
      .controls
        = f.text_field :maker_email, class: 'input-xlarge'

    .control-group
      = f.label :referrer_first_name, class: "control-label", label: "Your First Name"
      .controls
        = f.text_field :referrer_first_name, class: 'input-xlarge'

    .control-group
      = f.label :referrer_last_name, class: "control-label", label: "Your Last Name"
      .controls
        = f.text_field :referrer_last_name, class: 'input-xlarge'

    .control-group
      = f.label :maker_city, class: "control-label", label: "City"
      .controls
        = f.text_field :maker_city, class: 'input-xlarge'

    .control-group
      .controls
        = f.submit "Nominate", class: 'btn btn-primary'